{
  "compilerOptions": {
    "target": "es2017",                          
    "module": "commonjs", 
    "lib": ["es6"],
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,          
    "removeComments": true,       
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],                     
    "resolveJsonModule": true,      
    "esModuleInterop": true,                  
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "baseUrl": ".",
    "paths":{
      "@infra/*": ["./src/infra/*"],
      "@core/*": ["./src/core/*"]
    }
  },
  "include": [
    "src/**/*.ts"
  ]
}
